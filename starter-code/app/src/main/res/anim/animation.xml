<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false"
    android:fillAfter="false" >
  <alpha
      android:duration="1000"
      android:fromAlpha="0"
      android:toAlpha="1"
      android:fillAfter="true"
      />

  <rotate
      android:duration="1000"
      android:pivotX="50%"
      android:pivotY="50%"
      android:fromDegrees="0"
      android:toDegrees="720"
    />
</set>